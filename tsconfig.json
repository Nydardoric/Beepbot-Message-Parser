{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "pretty": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2016.array.include"
    ]
  },
  "exclude": [
    "./tests/**/*",
    "./dist/**/*",
    "node_modules"
  ]
}
